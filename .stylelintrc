{
  "extends": ["stylelint-config-standard", "stylelint-config-css-modules"],
  "ignoreFiles": [
    "**/*.js",
    "**/*.tsx",
    "node_modules/**/*.css",
    "public/static/styles/*.css"
  ],
  "rules": {
    "color-hex-length": "long",
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind", "screen", "theme"]
      }
    ],
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": ["theme"]
      }
    ]
  }
}
